<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:background="#FFE8D6">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/rv_sepatu"
            android:layout_width="150px"
            android:layout_height="150px"
            android:background="#FFE8D6"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_namaSepatu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/rv_sepatu"
            android:text="Nama Sepatu"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_toRightOf="@id/rv_sepatu"
            android:fontFamily="@font/abeezee"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_deskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_namaSepatu"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="Deskripsi"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_toEndOf="@id/rv_sepatu"
            android:ellipsize="end"
            android:maxLines="5"
            android:layout_toRightOf="@id/rv_sepatu"
            android:fontFamily="@font/abeezee"/>

        <TextView
            android:id="@+id/tv_stockTersedia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_deskripsi"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_toEndOf="@id/rv_sepatu"
            android:layout_toRightOf="@id/rv_sepatu"
            android:ellipsize="end"
            android:fontFamily="@font/abeezee"
            android:maxLines="5"
            android:text="Stock"
            android:textColor="@color/black"
            android:textSize="18dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>